@import '../../styles/variables.wxss';

.apron-collapse-item {
  background-color: #ffffff;
  transition: all 0.3s ease;
}

.apron-collapse-item:not(:first-child) {
  border-top: 1px solid var(--color-neutral-200);
}

.apron-collapse-item__header {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 30rpx;
  cursor: pointer;
  user-select: none;
  transition: all 0.3s ease;
}

.apron-collapse-item__header:active {
  background-color: rgba(0, 0, 0, 0.02);
}

.apron-collapse-item.disabled .apron-collapse-item__header {
  cursor: not-allowed;
  color: var(--color-neutral-400);
}

.apron-collapse-item__arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-neutral-500);
  transition: transform 0.3s ease;
}

.apron-collapse-item__arrow.open {
  transform: rotate(90deg);
}

.apron-collapse-item__title {
  flex: 1;
  font-size: var(--font-size-base);
  color: var(--color-primary-900);
}

.apron-collapse-item__content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease;
}

.apron-collapse-item__content.active {
  max-height: 2000rpx;
}

.apron-collapse-item__body {
  padding: 0 30rpx 20rpx 30rpx;
  color: var(--color-primary-900);
  font-size: var(--font-size-base);
  line-height: 1.5;
}

