@import '../../styles/variables.wxss';

.apron-tooltip-wrapper {
  position: relative;
  display: inline-block;
}

.apron-tooltip__trigger {
  display: inline-block;
}

.apron-tooltip {
  position: absolute;
  bottom: 100%;
  left: 50%;
  transform: translateX(-50%);
  margin-bottom: 16rpx;
  background-color: var(--color-neutral-900);
  border-radius: var(--radius-md);
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
  z-index: 1000;
  padding: var(--spacing-2) var(--spacing-3);
  white-space: nowrap;
}

.apron-tooltip__arrow {
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 8rpx solid transparent;
  border-right: 8rpx solid transparent;
  border-top: 8rpx solid var(--color-neutral-900);
}

.apron-tooltip__content {
  font-size: var(--font-size-sm);
  color: #ffffff;
  line-height: 1.5;
}

