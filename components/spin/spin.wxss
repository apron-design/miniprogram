@import '../../styles/variables.wxss';

.apron-spin-wrapper {
  position: relative;
  display: inline-block;
  width: 100%;
}

.apron-spin-wrapper.fullscreen {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: auto;
}

.apron-spin {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: var(--color-primary-500);
}

.apron-spin__overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.8);
  z-index: 1;
}

.apron-spin__overlay.fullscreen {
  position: fixed;
  inset: 0;
}

.apron-spin__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-3);
}

.apron-spin__icon {
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-primary-500);
}

.apron-spin__icon-svg {
  font-size: 64rpx;
  animation: apron-spin-rotate 1s linear infinite;
}

@keyframes apron-spin-rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.apron-spin__text {
  font-size: var(--font-size-sm);
  color: var(--color-primary-500);
  text-align: center;
}

