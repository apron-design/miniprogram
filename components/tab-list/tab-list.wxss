@import '../../styles/variables.wxss';

.apron-tabs__list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid var(--color-neutral-200);
  transition: all 0.3s ease;
}

.apron-tabs__list-items {
  display: flex;
  align-items: center;
  gap: 0;
}

.apron-tabs__list-extra {
  margin-left: auto;
  flex-shrink: 0;
}

