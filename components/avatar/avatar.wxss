@import '../../styles/variables.wxss';

.apron-avatar {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  background-color: var(--color-neutral-200);
  color: var(--color-neutral-600);
  font-weight: var(--font-weight-medium);
  vertical-align: middle;
  white-space: nowrap;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.apron-avatar.mini {
  width: 56rpx;
  height: 56rpx;
  font-size: var(--font-size-xs);
}

.apron-avatar.small {
  width: 68rpx;
  height: 68rpx;
  font-size: var(--font-size-sm);
}

.apron-avatar.middle {
  width: 80rpx;
  height: 80rpx;
  font-size: var(--font-size-base);
}

.apron-avatar.large {
  width: 128rpx;
  height: 128rpx;
  font-size: var(--font-size-xl);
}

.apron-avatar.square {
  border-radius: var(--radius-lg);
}

.apron-avatar__image {
  width: 100%;
  height: 100%;
}

.apron-avatar__content {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

/* Avatar Group */
.apron-avatar-group {
  display: inline-flex;
  flex-direction: row-reverse;
  align-items: center;
  transition: all 0.3s ease;
}

.apron-avatar-group .apron-avatar {
  box-sizing: content-box;
  border: 4rpx solid #ffffff;
}

.apron-avatar-group .apron-avatar:not(:last-child) {
  margin-left: -24rpx;
}

