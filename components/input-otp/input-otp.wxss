@import '../../styles/variables.wxss';

.apron-input-otp {
  display: inline-flex;
  align-items: center;
  gap: var(--spacing-2);
  font-size: var(--font-size-base);
  box-sizing: border-box;
}

.apron-input-otp__hidden-input {
  position: absolute;
  width: 1px;
  height: 1px;
  opacity: 0;
  pointer-events: none;
}

.apron-input-otp__display {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.apron-input-otp__slot {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
  height: 80rpx;
  background-color: var(--color-primary-50);
  border: 1px solid var(--color-primary-50);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-primary-500);
  text-align: center;
  transition: all 0.3s ease;
  position: relative;
}

.apron-input-otp.focused .apron-input-otp__slot.active {
  border-color: var(--color-primary-500);
  background-color: #ffffff;
}

.apron-input-otp.success .apron-input-otp__slot {
  border-color: var(--color-success-500);
  background-color: rgba(34, 197, 94, 0.1);
}

.apron-input-otp.error .apron-input-otp__slot {
  border-color: var(--color-error-500);
  background-color: rgba(239, 68, 68, 0.1);
}

.apron-input-otp.disabled .apron-input-otp__slot {
  background-color: var(--color-neutral-100);
  border-color: var(--color-neutral-200);
  color: var(--color-neutral-400);
  cursor: not-allowed;
}

.apron-input-otp.square .apron-input-otp__slot {
  width: 80rpx;
}

.apron-input-otp.small .apron-input-otp__slot {
  min-width: 64rpx;
  height: 64rpx;
  font-size: var(--font-size-lg);
}

.apron-input-otp.small.square .apron-input-otp__slot {
  width: 64rpx;
}

.apron-input-otp__separator {
  font-size: var(--font-size-lg);
  color: var(--color-neutral-400);
  padding: 0 var(--spacing-2);
}

.apron-input-otp__cursor {
  position: absolute;
  width: 2rpx;
  height: 40rpx;
  background-color: var(--color-primary-500);
  animation: apron-input-otp-blink 1s infinite;
}

@keyframes apron-input-otp-blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

