@import '../../styles/variables.wxss';

.apron-tag {
  display: inline-flex;
  align-items: center;
  height: 60rpx;
  padding: 0 24rpx;
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-normal);
  line-height: 1;
  border-radius: 30rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
}

.apron-tag.primary {
  background-color: var(--color-primary-500);
  color: #ffffff;
}

.apron-tag.default {
  background-color: var(--color-neutral-100);
  color: var(--color-primary-900);
  border: 1px solid var(--color-neutral-300);
}

.apron-tag.closable {
  padding-right: 12rpx;
}

.apron-tag__content {
  display: inline-flex;
  align-items: center;
}

.apron-tag__close {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36rpx;
  height: 36rpx;
  margin-left: 12rpx;
  border-radius: 50%;
  cursor: pointer;
  transition: all 0.3s ease;
  flex-shrink: 0;
  font-size: 32rpx;
  line-height: 1;
}

.apron-tag.primary .apron-tag__close {
  color: #ffffff;
}

.apron-tag.primary .apron-tag__close:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.apron-tag.default .apron-tag__close {
  color: var(--color-primary-900);
}

.apron-tag.default .apron-tag__close:active {
  background-color: var(--color-neutral-200);
}

