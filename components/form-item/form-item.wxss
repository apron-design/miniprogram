@import '../../styles/variables.wxss';

.apron-form-item {
  display: flex;
  margin-bottom: var(--spacing-4);
}

.apron-form-item.vertical {
  flex-direction: column;
  gap: var(--spacing-2);
}

.apron-form-item.horizontal {
  flex-direction: row;
  align-items: flex-start;
  gap: var(--spacing-4);
}

.apron-form-item__label {
  font-size: var(--font-size-base);
  color: var(--color-primary-900);
  line-height: 1.5;
  flex-shrink: 0;
}

.apron-form-item__required {
  color: var(--color-error-500);
  margin-left: 4rpx;
}

.apron-form-item__control {
  flex: 1;
  position: relative;
}

.apron-form-item__floating-label {
  position: absolute;
  left: var(--spacing-4);
  top: 50%;
  transform: translateY(-50%);
  font-size: var(--font-size-base);
  color: var(--color-neutral-500);
  pointer-events: none;
  transition: all 0.3s ease;
  z-index: 1;
}

.apron-form-item.floating-active .apron-form-item__floating-label {
  top: 0;
  transform: translateY(-50%) scale(0.85);
  color: var(--color-primary-500);
}

.apron-form-item__content {
  position: relative;
}

.apron-form-item__error {
  font-size: var(--font-size-sm);
  color: var(--color-error-500);
  margin-top: var(--spacing-1);
}

.apron-form-item__help {
  font-size: var(--font-size-sm);
  color: var(--color-neutral-500);
  margin-top: var(--spacing-1);
}

.apron-form-item__extra {
  font-size: var(--font-size-sm);
  color: var(--color-neutral-500);
  margin-top: var(--spacing-1);
}

.apron-form-item.error .apron-form-item__floating-label {
  color: var(--color-error-500);
}

.apron-form-item.disabled {
  opacity: 0.6;
  pointer-events: none;
}

