@import '../../styles/variables.wxss';

.apron-drawer-root {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.apron-drawer-root.open {
  opacity: 1;
  pointer-events: auto;
}

.apron-drawer__overlay {
  position: absolute;
  inset: 0;
  background-color: rgba(0, 0, 0, 0.5);
  pointer-events: auto;
}

.apron-drawer {
  position: absolute;
  background-color: #ffffff;
  box-shadow: -4rpx 0 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  pointer-events: auto;
  transition: transform 0.3s ease;
}

.apron-drawer.right {
  top: 0;
  right: 0;
  bottom: 0;
  transform: translateX(100%);
}

.apron-drawer-root.open .apron-drawer.right {
  transform: translateX(0);
}

.apron-drawer.left {
  top: 0;
  left: 0;
  bottom: 0;
  transform: translateX(-100%);
}

.apron-drawer-root.open .apron-drawer.left {
  transform: translateX(0);
}

.apron-drawer.top {
  top: 0;
  left: 0;
  right: 0;
  transform: translateY(-100%);
}

.apron-drawer-root.open .apron-drawer.top {
  transform: translateY(0);
}

.apron-drawer.bottom {
  bottom: 0;
  left: 0;
  right: 0;
  transform: translateY(100%);
}

.apron-drawer-root.open .apron-drawer.bottom {
  transform: translateY(0);
}

.apron-drawer__close {
  position: absolute;
  top: var(--spacing-4);
  right: var(--spacing-4);
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--color-neutral-500);
  cursor: pointer;
  z-index: 1;
}

.apron-drawer__close.inline {
  position: static;
}

.apron-drawer__header {
  display: flex;
  align-items: center;
  padding: var(--spacing-4);
  border-bottom: 1px solid var(--color-neutral-200);
}

.apron-drawer__header.mobile {
  justify-content: space-between;
}

.apron-drawer__header-left,
.apron-drawer__header-right {
  flex-shrink: 0;
}

.apron-drawer__title {
  flex: 1;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-primary-900);
}

.apron-drawer__body {
  flex: 1;
  padding: var(--spacing-4);
  overflow-y: auto;
}

.apron-drawer__footer {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  padding: var(--spacing-4);
  border-top: 1px solid var(--color-neutral-200);
}

.apron-drawer__footer.right {
  justify-content: flex-start;
}

.apron-drawer__footer.left,
.apron-drawer__footer.top,
.apron-drawer__footer.bottom {
  justify-content: flex-end;
}

