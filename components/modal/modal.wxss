@import '../../styles/variables.wxss';

.apron-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: var(--z-index-modal);
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.5);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.apron-modal--show {
  opacity: 1;
  pointer-events: auto;
}

.apron-modal__container {
  position: relative;
  width: 80%;
  max-width: 600rpx;
  background-color: #ffffff;
  border-radius: var(--radius-xl);
  overflow: hidden;
  transform: scale(0.9);
  transition: transform 0.3s ease;
}

.apron-modal--show .apron-modal__container {
  transform: scale(1);
}

.apron-modal__close {
  position: absolute;
  top: var(--spacing-4);
  right: var(--spacing-4);
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: var(--color-neutral-400);
  z-index: 1;
}

.apron-modal__header {
  padding: var(--spacing-6) var(--spacing-6) var(--spacing-4);
  border-bottom: 1px solid var(--color-neutral-200);
}

.apron-modal__title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-primary-500);
}

.apron-modal__body {
  padding: var(--spacing-6);
  font-size: var(--font-size-base);
  color: var(--color-primary-500);
  line-height: 1.5;
}

.apron-modal__footer {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-4);
  padding: var(--spacing-4) var(--spacing-6) var(--spacing-6);
  border-top: 1px solid var(--color-neutral-200);
}

.apron-modal__btn {
  padding: var(--spacing-2) var(--spacing-5);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-base);
  border: none;
  background: none;
}

.apron-modal__btn--cancel {
  color: var(--color-primary-500);
}

.apron-modal__btn--confirm {
  background-color: var(--color-primary-500);
  color: #FFFFFF;
}

.apron-modal__btn--confirm::after {
  border: none;
}

