@import '../../styles/variables.wxss';

.apron-pagination {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.apron-pagination__item {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 64rpx;
  height: 64rpx;
  padding: 0 var(--spacing-2);
  font-size: var(--font-size-base);
  color: var(--color-primary-500);
  background-color: transparent;
  border: 1px solid var(--color-neutral-200);
  border-radius: var(--radius-md);
  cursor: pointer;
  transition: all 0.3s ease;
}

.apron-pagination__item:active:not(.disabled) {
  background-color: var(--color-primary-50);
  border-color: var(--color-primary-500);
}

.apron-pagination__item.active {
  background-color: var(--color-primary-500);
  color: #ffffff;
  border-color: var(--color-primary-500);
}

.apron-pagination__item.disabled {
  color: var(--color-neutral-400);
  border-color: var(--color-neutral-200);
  cursor: not-allowed;
  opacity: 0.5;
}

.apron-pagination__arrow {
  font-size: var(--font-size-lg);
}

.apron-pagination__ellipsis {
  border: none;
  cursor: default;
}

.apron-pagination.large .apron-pagination__item {
  min-width: 80rpx;
  height: 80rpx;
  font-size: var(--font-size-lg);
}

.apron-pagination.small .apron-pagination__item {
  min-width: 56rpx;
  height: 56rpx;
  font-size: var(--font-size-sm);
}

.apron-pagination.disabled .apron-pagination__item {
  cursor: not-allowed;
  opacity: 0.5;
}

