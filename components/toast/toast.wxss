@import '../../styles/variables.wxss';

.apron-toast__overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: transparent;
  pointer-events: auto;
  z-index: 10000;
}

.apron-toast {
  width: 400rpx;
  height: 400rpx;
  background-color: #ffffff;
  border: 1px solid var(--color-neutral-200);
  border-radius: 60rpx;
  box-shadow: 0 20rpx 30rpx -10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  pointer-events: auto;
  opacity: 0;
  transform: scale(0.9);
  transition: all 0.3s ease;
}

.apron-toast.visible {
  opacity: 1;
  transform: scale(1);
}

.apron-toast.entering {
  opacity: 0;
  transform: scale(0.9);
}

.apron-toast.leaving {
  opacity: 0;
  transform: scale(0.9);
}

.apron-toast__content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-3);
  padding: var(--spacing-4);
}

.apron-toast__icon {
  font-size: 128rpx;
  color: var(--color-primary-500);
}

.apron-toast__loading-icon {
  animation: apron-toast-spin 1s linear infinite;
}

@keyframes apron-toast-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.apron-toast__text {
  font-size: var(--font-size-base);
  color: var(--color-primary-500);
  text-align: center;
}

